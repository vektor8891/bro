# credentials.yaml: stores sensitive database credentials
#
# WARNING: This file should contain sensitive information and should be
# excluded from version control. It's already listed in .gitignore.
#
# Structure: Each entry corresponds to a credential_key referenced in connections.yaml
#
# Example:
#
# postgres_creds:
#   user: myuser
#   password: mypassword
#
# redshift_prod:
#   user: analytics_user
#   password: super_secret_password
#   host: prod-cluster.us-east-1.redshift.amazonaws.com
#
# netezza_prod:
#   user: etl_user
#   password: another_secret
